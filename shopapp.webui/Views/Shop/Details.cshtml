@model ProductDetailModel

<div class="row">
    <div class="col-lg-4">
        <div class="gallery-wrap">
            <div class="img-big-wrap img-thumbnail">
              <a href="~/img/@Model.Product.ImageUrl" data-type="image" data-fslightbox="mygallery">
                <img src="~/img/@Model.Product.ImageUrl" class="img-fluid" >
              </a>
            </div>
            <div class="thumbs-wrap">
             <a href="~/img/@Model.Product.ImageUrl" data-type="image" data-fslightbox="mygallery">
                <img width="60" height="60" src="~/img/@Model.Product.ImageUrl" class="img-fluid" >
              </a>
            </div>
        </div>
    </div>
    <div class="col-lg-8">                
            <h1 class="mb-3">@Model.Product.Name</h5> <hr>

            @foreach (var item in Model.Categories)
            {
                <a asp-controller="shop" asp-action="list" asp-route-category="@item.Url" class="btn btn-link p-0 mb-3">@item.Name</a> 
            }                          
            
            <div class="mb-3">
                <h4 class="text-primary mb-3">
                    <i class="fas fa-lira-sign"></i>@Model.Product.Price
                </h4>
                
                <form asp-controller="Cart" asp-action="AddToCart" method="POST" class="form-inline">
                    <input type="hidden" name="productId" value="@Model.Product.ProductId">
                    <div class="input-group mb-3">
                        <input type="number" name="quantity" class="form-control" value="1" min="1" step="1" style="width: 100px;">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-cart-plus"></i>Sepete Ekle                               
                            </button>
                        </div>
                    </div>     
               
                </form>
            </h6>
    </div>
</div>
<div class="row">
    <div class="col-md-12 p-5">
        <p class="p-3">@Html.Raw(Model.Product.Description)</p>
    </div>
</div>


@section Scripts
{
   
    <script src="~/node_modules/fslightbox/index.js" ></script>
}